#!/bin/sh
OPTS=""

if [ -n "$D" ]; then
    OPTS="--root=$D"
fi

if type systemctl >/dev/null 2>/dev/null; then
	if [ -z "$D" ]; then
		systemctl stop bonescript-autorun.service bonescript.service bonescript.socket
	fi

	systemctl $OPTS disable bonescript-autorun.service bonescript.service bonescript.socket
fi
