#!/bin/sh
if [ "x$D" != "x" ]; then
	install -d $D/usr/local/oecore-i586/sysroots/i586-angstromsdk-linux/etc/rcS.d
	# this happens at S98 where our good 'ole packages script used to run
	echo "#!/bin/sh
opkg-cl configure
rm -f //usr/local/oecore-i586/sysroots/i586-angstromsdk-linux/etc/rcS.d/S98run-postinsts
" > $D/usr/local/oecore-i586/sysroots/i586-angstromsdk-linux/etc/rcS.d/S98run-postinsts
	chmod 0755 $D/usr/local/oecore-i586/sysroots/i586-angstromsdk-linux/etc/rcS.d/S98run-postinsts
fi
	update-alternatives --install /usr/local/oecore-i586/sysroots/i586-angstromsdk-linux/usr/bin/opkg opkg opkg-cl 100
