#!/bin/sh
OPTS=""

if [ -n "$D" ]; then
    OPTS="--root=$D"
fi

if type systemctl >/dev/null 2>/dev/null; then
	systemctl $OPTS enable bonescript-autorun.service bonescript.service bonescript.socket

	if [ -z "$D" -a "enable" = "enable" ]; then
		systemctl restart bonescript-autorun.service bonescript.service bonescript.socket
	fi
fi
