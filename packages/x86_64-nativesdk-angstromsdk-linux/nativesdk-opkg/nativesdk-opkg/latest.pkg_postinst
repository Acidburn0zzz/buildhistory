#!/bin/sh
if [ "x$D" != "x" ] && [ -f $D/var/lib/opkg/status ]; then
	install -d $D/usr/local/oecore-x86_64/sysroots/x86_64-angstromsdk-linux/etc/rcS.d

	# this happens at S98 where our good 'ole packages script used to run
	echo "#!/bin/sh
opkg-cl configure 
rm -f //usr/local/oecore-x86_64/sysroots/x86_64-angstromsdk-linux/etc/rcS.d/S98run-postinsts
" > $D/usr/local/oecore-x86_64/sysroots/x86_64-angstromsdk-linux/etc/rcS.d/S98run-postinsts
	chmod 0755 $D/usr/local/oecore-x86_64/sysroots/x86_64-angstromsdk-linux/etc/rcS.d/S98run-postinsts
fi
	update-alternatives --install /usr/local/oecore-x86_64/sysroots/x86_64-angstromsdk-linux/usr/bin/opkg opkg /usr/local/oecore-x86_64/sysroots/x86_64-angstromsdk-linux/usr/bin/opkg-cl 100
